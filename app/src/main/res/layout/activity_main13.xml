<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity13">

    <LinearLayout
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.15"
            android:background="@color/white"
            android:contentDescription="Arrow to go back"
            android:src="@drawable/baseline_arrow_back_24"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:text="Edit Profile"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#111111"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/but100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:textSize="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="50dp"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#34989C9C" />

    </LinearLayout>


    <TextView
        android:id="@+id/r1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="20sp"
        android:textColor="#8B8B8B"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp" />

    <EditText
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/r1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#34989C9C"
        android:padding="15dp"
        android:hint="Enter name" />

    <TextView
        android:id="@+id/r3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20sp"
        android:textColor="#8B8B8B"
        android:textStyle="bold"
        android:layout_below="@id/r2"
        android:layout_margin="10dp" />

    <EditText
        android:id="@+id/r4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/r3"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#34989C9C"
        android:padding="15dp"
        android:hint="Enter Email" />

    <TextView
        android:id="@+id/r5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Number"
        android:textSize="20sp"
        android:textColor="#8B8B8B"
        android:textStyle="bold"
        android:layout_below="@id/r4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />


    <EditText
        android:id="@+id/r6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/r5"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#34989C9C"
        android:padding="15dp"
        android:hint="Enter contact number" />

    <TextView
        android:id="@+id/r7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country"
        android:textSize="20sp"
        android:textColor="#8B8B8B"
        android:textStyle="bold"
        android:layout_below="@id/r6"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <EditText
        android:id="@+id/r8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/r7"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#34989C9C"
        android:padding="12dp"
        android:hint="Enter country" />

    <TextView
        android:id="@+id/r9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:textSize="20sp"
        android:textColor="#8B8B8B"
        android:textStyle="bold"
        android:layout_below="@id/r8"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <EditText
        android:id="@+id/r10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/r9"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#34989C9C"
        android:padding="15dp"
        android:hint="Enter city" />

</RelativeLayout>