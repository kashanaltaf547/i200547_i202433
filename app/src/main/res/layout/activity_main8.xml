<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity8">

    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_margin="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#34989C9C"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="90dp"
        android:weightSum="5"
        android:background="@color/white">

        <ImageView
            android:id="@+id/p1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/person1"
            android:layout_weight="0.5"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                android:id="@+id/te1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Makenna Dias"
                android:textSize="26dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#8B8B8B"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/te2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 new message"
                android:textSize="17dp"
                android:textColor="#FF5722"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <ImageButton
                android:id="@+id/lll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="35dp"
                android:backgroundTint="@color/white"
                android:contentDescription="Button to move forward"
                android:src="@drawable/baseline_chevron_right_24"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="210dp"
        android:background="#34989C9C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_below="@+id/l2"
        android:background="@color/white">

        <ImageView
            android:id="@+id/p2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/person2"
            android:layout_below="@id/l2"
            android:layout_weight="0.5"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                android:id="@+id/te4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Miracle Philips"
                android:textSize="26dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#8B8B8B"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/te5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No new messages"
                android:textSize="17dp"
                android:textColor="#B7B7B7"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <ImageButton
                android:id="@+id/lll2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62dp"
                android:layout_marginTop="35dp"
                android:backgroundTint="@color/white"
                android:contentDescription="Button to move forward"
                android:src="@drawable/baseline_chevron_right_24"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/l3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="330dp"
        android:background="#34989C9C" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_below="@+id/l3"
        android:background="@color/white">

        <ImageView
            android:id="@+id/p3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/person3"
            android:layout_below="@id/l3"
            android:layout_weight="0.5"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                android:id="@+id/te6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zaire Gouse"
                android:textSize="26dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#8B8B8B"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/te7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No new messages"
                android:textSize="17dp"
                android:textColor="#B7B7B7"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <ImageButton
                android:id="@+id/lll3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="86dp"
                android:layout_marginTop="35dp"
                android:backgroundTint="@color/white"
                android:contentDescription="Button to move forward"
                android:src="@drawable/baseline_chevron_right_24"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/l4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="450dp"
        android:background="#34989C9C" />



    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#8B8B8B"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_alignParentBottom="true"
        android:background="#34989C9C">

        <ImageView
            android:id="@+id/lll5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/home"
            android:contentDescription="Home"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/lll6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/search3"
            android:contentDescription="Search"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/lll7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_circle"
            android:layout_gravity="center"
            android:clickable="true"
            android:layout_weight="0.25"
            android:contentDescription="Add content"/>

        <ImageView
            android:id="@+id/lll8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/user_circle"
            android:contentDescription="User Profile"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/lll9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:contentDescription="Chat"
            android:clickable="true"
            android:src="@drawable/chat_bubble1"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>



</RelativeLayout>